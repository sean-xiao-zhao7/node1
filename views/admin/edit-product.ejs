<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<%= editing ? 'edit-product' : 'add-product' %>" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= editing ? product.title : null %>" >
            </div>
            <!-- <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= editing ? product.imageUrl : null %>">
            </div> -->
            <div class="form-control">
                <label for="imageUrl">Image Upload</label>
                <input type="file" name="imageUrl" id="imageUrl" />
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= editing ? product.price : null %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%= editing ? product.description : null %></textarea>
            </div>
            <input type='hidden' name='id' value='<%= editing ? product._id : null %>' />
            <input type='hidden' name='_csrf' value='<%= csrfToken %>' />     
            <button class="btn" type="submit"><%= editing ? "Edit Product" : "Add Product" %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>