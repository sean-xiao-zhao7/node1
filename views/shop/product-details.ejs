    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class='centered'>
            <h1><%= product.title %></h1>
            <hr/>
            <img src="<%= product.imageUrl %>" alt="<%= product.title %>" />
            <h2><%= product.price %></h2>
            <p><%= product.description %></p>
